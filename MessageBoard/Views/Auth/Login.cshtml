@section Title { Login }

<div class="d-flex flex-column align-items-center justify-content-center">
  <h1 class="fs-2">Login</h1>

  <form class="w-50 p-4 mt-3" style="background: #15171a; box-shadow: 0 0 3px black"
    asp-route="AuthAuthenticate" method="post"
  >
    <div>
      <label>Username</label>
      <input class="text-light form-control" style="background: #111"
        name="username"
      />
    </div>

    <div class="mt-3">
      <label>Password</label>
      <input type="password" class="text-light form-control"
        style="background: #111"
        name="password"
      />
    </div>

    <div class="mt-5">
      <button class="btn btn-dark w-100">Log In</button>
    </div>

    @if (ViewData.ModelState[""] != null &&
        ViewData.ModelState[""].Errors.Any())
    {
      @foreach (var error in ViewData.ModelState[""].Errors)
      {
        <div class="bg-danger mt-3 p-1">
          @error.ErrorMessage
        </div>
      }
    }
  </form>
</div>
